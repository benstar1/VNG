<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/loginerror_1.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>AccesContribuable</display-name>
        <web-resource-collection>
            <web-resource-name>declaration</web-resource-name>
            <description>déclaration fiscale</description>
            <url-pattern>/vues/tEntDeclaration/DeclarationFiscal.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>CONTRIBUABLE</role-name>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>AccesInspecteur</display-name>
        <web-resource-collection>
            <web-resource-name>recoupement</web-resource-name>
            <description>Recoupement </description>
            <url-pattern>/vues/recoupement/Recoupement.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>AccèsConsultationdeclaration</web-resource-name>
            <description>Consultation des déclarations douanières</description>
            <url-pattern>/vues/tDeclarationDou/ConsulterDD.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>RecoupementBEF</web-resource-name>
            <description/>
            <url-pattern>/vues/fenStat/FormBEF.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>INSPECTEUR</role-name>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>AccesStatutContrib</display-name>
        <web-resource-collection>
            <web-resource-name>MAJStatutindividuel</web-resource-name>
            <description/>
            <url-pattern>/vues/tRepUnique/MAJIndividuelle.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>MAJStatutCollective</web-resource-name>
            <description/>
            <url-pattern>/vues/tRepUnique/MAJCollective.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>EtatStatutContribuable</web-resource-name>
            <description/>
            <url-pattern>/vues/fenStat/StatEnt.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>INSPECTMAJ</role-name>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>AccesActiveCC</display-name>
        <web-resource-collection>
            <web-resource-name>Activation_contribuable</web-resource-name>
            <description>Pour activer un contribuable après son inscription </description>
            <url-pattern>/vues/tUtilisateur/MAJUtilisateur.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>ADMIN</role-name>
            <role-name>ACTIVECC</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>AccesAdmin</display-name>
        <web-resource-collection>
            <web-resource-name>CreationUtilisateur</web-resource-name>
            <description/>
            <url-pattern>/vues/tUtilisateur/creerUtilisateur.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>creerAdministrateur</web-resource-name>
            <description/>
            <url-pattern>/vues/tUtilisateur/creerAdministrator.xhtml</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbcrealm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/loginerror.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Profil des contribuables pour déclaration</description>
        <role-name>CONTRIBUABLE</role-name>
    </security-role>
    <security-role>
        <description>Profil des inspecteurs pour contrôler</description>
        <role-name>INSPECTEUR</role-name>
    </security-role>
    <security-role>
        <description>Administrateur</description>
        <role-name>ADMIN</role-name>
    </security-role>
    <security-role>
        <description>Inspecteur chargé de mettre à jour l'état activé ou désactivé d'un contribuable</description>
        <role-name>INSPECTMAJ</role-name>
    </security-role>
    <security-role>
        <description>Profil des agents des centres qui feront l'activation des comptes des contibuables inscrits</description>
        <role-name>ACTIVECC</role-name>
    </security-role>
</web-app>
